<%- include ("../partials/header") %>
<div class="container jumbotron">
	<h1> Welcome to Help Camp </h1>
	<p> View our hand picked campground from all over the world </p>
	<a class="btn btn-primary btn-lg" href="/campground/new">Add campground</a>
</div>
	<div class="container">
		<div class="row">
			<% for(var i=0; i<campgrounds.length; i++) { %>
			<div class="col-md-6 col-lg-5 col-xl-3">
				<div class="card" style="width: 15rem; margin: 10px;">
 					<img src="<%= campgrounds[i].image%>" class="card-img-top">
 					<div class="card-body">
   						<h5 class="card-title"><%= campgrounds[i].name %></h5>
   						<!--<p class="card-text"><%= campgrounds[i].description %></p>-->
						<a href="/campground/<%= campgrounds[i]._id %>"  
						   class="btn btn-sm btn-outline-info">Read more</a> 	
					</div>
				</div>
			</div>
			<% } %>
		</div>
	</div>
	


