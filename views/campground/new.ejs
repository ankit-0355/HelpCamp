<%- include ("../partials/header") %>
<div class="container" style="margin: 50px auto">
	<div class="row">
		<h1 class="col 12" style="text-align: center">Create a New Campground</h1>
	</div>
	<div style="width: 45%; margin: 20px auto;">
		<form action="/campground" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="name" placeholder="Name">	
			</div>
 			<div class="form-group">
 				<input class="form-control" type="text" name="image" placeholder="Image URL">	
 			</div>
			<div>
				<textarea placeholder="Description" name="description" type="text" 
				rows="5" cols="30" style="width: 100%"></textarea>
			</div>
 			<div class="form-group">
 				<button class="btn btn-primary btn-block">SUBMIT</button>	
 			</div>
 		</form>
 	</div>
</div>
<%- include ("../partials/footer") %>


