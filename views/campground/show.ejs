<%- include ("../partials/header") %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">HelpCamp</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div><!--End of list group-->
		</div><!--end of col 3-->
		<div class="col-md-9">
			<div class="card mb-3" style="width: 90%; margin: 10px">
				<img src="<%= campground.image %>" class="card-img-top">
				<div class="card-body" style="padding: 10px 15px 0 10px">
					<h5 class="card-title"><%= campground.name %></h5>
					<p class="card-text"><%= campground.description %></p>
					<p>
						<em>Submited By <%= campground.author.username%></em>
					</p>
				</div><!--end of card body-->
			</div><!--end of card-->
			<div class="card mb-3 bg-light" style="width: 90%; margin-left: 10px">
				<div class="card-body">
					<div class="text-right">
						<a class="btn btn-success btn-sm" href="/campground/<%= campground._id %>/comments/new">
							Leave a Review
						</a>
					</div>
					<hr>
						<% campground.comments.forEach(function(comment){ %>
							<div class="row">
								<div class="col-md-12">
									<strong><%= comment.author.username %></strong>
								<p> <%= comment.text %></p>
								</div><!--col end-->
							</div><!--row end-->
						<% }) %>
				</div><!--card body ends-->
			</div><!--card end-->
		</div><!--col-9 ends-->
	</div><!--row ends-->
</div><!--container ends-->

<%- include ("../partials/footer") %>